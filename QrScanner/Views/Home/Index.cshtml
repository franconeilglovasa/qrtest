<!DOCTYPE html>
<html lang="en" ng-app="demoApp">
<head>
    <meta charset="utf-8">
    <title> QR Upload </title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
    <script src="~/js/demoApp.js"></script>
    <script src="~/js/demoController.js"></script>

    <link rel='stylesheet' href='demo.css' />
</head>
<body ng-controller="DemoCtrl">
    <h2>bc-qr-reader demo</h2>
    <button ng-click="start()">Activate scanner</button>
    <p ng-hide="cameraRequested && !cameraIsOn">Your browser should ask for permission to use the camera.</p>
    <div>
        <bc-qr-reader active="cameraRequested" on-result="processURLfromQR" on-error="onError" camera-status="cameraIsOn" width="200px" height="200px"></bc-qr-reader>
    </div>
    <p>QR code detected!</p>
    <input type="text" ng-model="code" id="fname" name="fname">
    <input type="text" ng-model="vm.url" id="fname" name="fname">
    <button ng-click="buttonClick(code)">SEND</button>
    <button ng-click="vm.click(code)">SEND</button>
    <button onclick="testClick(code)">SEND</button>
</body>
</html>